<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Productos | Mi Empresa</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

  <style>
    /* Reset y base */
    body {
      font-family: "Poppins", sans-serif;
      background: #f9fbfd;
      color: #2c3e50;
      min-height: 100vh;
      margin: 0;
      padding: 0;
    }

    /* Navbar */
    .navbar {
      background: #fff;
      box-shadow: 0 2px 10px rgb(0 0 0 / 0.08);
      padding: 0.8rem 1rem;
      border-radius: 0 0 12px 12px;
    }

    .navbar-brand img {
      height: 42px;
      border-radius: 8px;
      transition: transform 0.3s ease;
    }

    .navbar-brand:hover img {
      transform: scale(1.1);
    }

    .navbar-brand span {
      font-weight: 700;
      font-size: 1.3rem;
      color: #1f8ef1;
      user-select: none;
    }

    /* Bot√≥n principal */
    .btn-brand {
      background: linear-gradient(45deg, #1f8ef1, #6eb3f7);
      color: #fff;
      font-weight: 600;
      border-radius: 50px;
      padding: 0.5rem 1.6rem;
      box-shadow: 0 4px 12px rgba(31, 142, 241, 0.5);
      transition: all 0.3s ease;
      border: none;
      user-select: none;
    }

    .btn-brand:hover,
    .btn-brand:focus {
      background: linear-gradient(45deg, #186fbb, #3e90f0);
      box-shadow: 0 6px 16px rgba(24, 111, 187, 0.7);
      outline: none;
      transform: translateY(-2px);
    }

    /* Card principal */
    .card-prod {
      border: none;
      border-radius: 20px;
      background: linear-gradient(135deg, #ffffff, #eaf4ff);
      box-shadow: 0 6px 24px rgba(31, 142, 241, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-prod:hover {
      transform: translateY(-8px);
      box-shadow: 0 10px 40px rgba(31, 142, 241, 0.25);
    }

    /* Tabla */
    .table {
      border-collapse: separate;
      border-spacing: 0 0.8rem;
    }

    .table thead tr th {
      background: #1f8ef1;
      color: #fff;
      border-radius: 12px;
      padding: 0.9rem 1.2rem;
      border: none;
      font-weight: 600;
      text-align: left;
      user-select: none;
    }

    .table tbody tr {
      background: #fff;
      box-shadow: 0 2px 10px rgb(0 0 0 / 0.06);
      border-radius: 14px;
      transition: box-shadow 0.3s ease, background-color 0.3s ease;
    }

    .table tbody tr:hover {
      background-color: #dbe9ff;
      box-shadow: 0 6px 18px rgba(31, 142, 241, 0.2);
    }

    .table tbody tr td {
      border: none;
      vertical-align: middle;
      padding: 1rem 1.4rem;
      font-weight: 500;
      color: #34495e;
    }

    .table tbody tr td:last-child {
      text-align: center;
      width: 150px;
    }

    /* Botones de acci√≥n */
    .btn-sm {
      border-radius: 8px;
      font-size: 0.85rem;
      padding: 0.32rem 0.6rem;
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 1px 5px rgb(0 0 0 / 0.1);
      user-select: none;
    }

    .btn-info {
      background-color: #3b82f6;
      border-color: #3b82f6;
      color: #fff;
    }

    .btn-info:hover {
      background-color: #2563eb;
      border-color: #2563eb;
      box-shadow: 0 3px 10px rgba(37, 99, 235, 0.6);
    }

    .btn-danger {
      background-color: #ef4444;
      border-color: #ef4444;
      color: #fff;
    }

    .btn-danger:hover {
      background-color: #b91c1c;
      border-color: #b91c1c;
      box-shadow: 0 3px 10px rgba(185, 28, 28, 0.6);
    }

    /* Modal */
    .modal-content {
      border-radius: 24px;
      padding: 1.5rem 2rem;
      box-shadow: 0 8px 30px rgba(31, 142, 241, 0.3);
      background: #ffffff;
    }

    .modal-header {
      border-bottom: none;
      background: #1f8ef1;
      border-radius: 24px 24px 0 0;
      color: white;
      font-weight: 700;
      font-size: 1.25rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem 2rem;
    }

    .btn-close {
      filter: invert(1);
      opacity: 0.8;
      transition: opacity 0.3s ease;
    }

    .btn-close:hover {
      opacity: 1;
    }

    .modal-body img {
      max-width: 90px;
      margin-bottom: 1rem;
      filter: drop-shadow(0 2px 4px rgba(31, 142, 241, 0.5));
    }

    .form-label {
      font-weight: 600;
      color: #34495e;
    }

    .form-control {
      border-radius: 12px;
      border: 1.8px solid #cfd8e8;
      box-shadow: none;
      transition: border-color 0.3s ease;
      font-weight: 500;
      padding: 0.55rem 1rem;
    }

    .form-control:focus {
      border-color: #1f8ef1;
      box-shadow: 0 0 6px #7fb6ff;
      outline: none;
    }

    /* Titulos */
    h2.fw-bold {
      color: #1f8ef1;
      user-select: none;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-light mb-4">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="/img/logo.png" alt="Logo de Mi Empresa" />
        <span class="ms-3">Mi Empresa</span>
      </a>
    </div>
  </nav>

  <div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Productos</h2>
      <button class="btn btn-brand" data-bs-toggle="modal" data-bs-target="#modalNuevoProducto"
        aria-label="Agregar nuevo producto">
        ‚ûï Nuevo Producto
      </button>
    </div>

    <div class="card card-prod p-4 mb-5">
      <div class="table-responsive">
        <table class="table mb-0">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% productos.forEach(producto=> { %>
              <tr>
                <td>
                  <%= producto.nombre %>
                </td>
                <td>$<%= (producto.precio !=null && !isNaN(producto.precio)) ? Number(producto.precio).toFixed(2)
                    : "0.00" %>
                </td>
                <td class="text-center">
                  <button class="btn btn-info btn-sm me-2"
                    onclick="abrirModalEditar('<%= producto._id %>', '<%= producto.nombre %>', '<%= producto.precio %>')"
                    aria-label="Editar producto <%= producto.nombre %>">
                    ‚úèÔ∏è
                  </button>
                  <form action="/v1/productos/<%= producto._id %>?_method=DELETE" method="POST" class="d-inline"
                    onsubmit="return confirm('¬øEliminar este producto?')">
                    <button type="submit" class="btn btn-danger btn-sm"
                      aria-label="Eliminar producto <%= producto.nombre %>">
                      üóëÔ∏è
                    </button>
                  </form>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal Nuevo -->
  <div class="modal fade" id="modalNuevoProducto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">üÜï Nuevo Producto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body text-center">
          <img src="/img/logo-modal.png" alt="Logo Modal" width="80" class="mb-3" />
          <form action="/v1/productos" method="POST">
            <div class="mb-3 text-start">
              <label class="form-label" for="nuevoNombre">Nombre</label>
              <input type="text" class="form-control" id="nuevoNombre" name="nombre" required autocomplete="off" />
            </div>
            <div class="mb-3 text-start">
              <label class="form-label" for="nuevoPrecio">Precio</label>
              <input type="number" class="form-control" id="nuevoPrecio" name="precio" step="0.01" required
                autocomplete="off" min="0" />
            </div>
            <button type="submit" class="btn btn-brand w-100">
              Guardar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Editar -->
  <div class="modal fade" id="modalEditarProducto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">‚úèÔ∏è Editar Producto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body text-center">
          <img src="/img/logo-modal.png" alt="Logo Modal" width="80" class="mb-3" />
          <form id="formEditarProducto" method="POST">
            <input type="hidden" name="_method" value="PUT" />
            <div class="mb-3 text-start">
              <label class="form-label" for="editarNombre">Nombre</label>
              <input type="text" class="form-control" id="editarNombre" name="nombre" required autocomplete="off" />
            </div>
            <div class="mb-3 text-start">
              <label class="form-label" for="editarPrecio">Precio</label>
              <input type="number" class="form-control" id="editarPrecio" name="precio" step="0.01" required
                autocomplete="off" min="0" />
            </div>
            <button type="submit" class="btn btn-brand w-100">
              Actualizar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function abrirModalEditar(id, nombre, precio) {
      const modal = new bootstrap.Modal(
        document.getElementById("modalEditarProducto")
      );
      document.getElementById("editarNombre").value = nombre;
      document.getElementById("editarPrecio").value = precio;
      document.getElementById("formEditarProducto").action = `/v1/productos/${id}?_method=PUT`;
      modal.show();
    }
  </script>
</body>

</html>